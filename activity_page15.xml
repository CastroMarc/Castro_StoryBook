<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:weightSum="5"
    android:background="@drawable/page15"
    tools:context=".Page15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="18dp"
            android:text="Good night, Shiela. Good night, you silly Sheep."
            android:textColor="#6C4AAA"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="Sweet dreams you, my friend. Let's have a good night's sleep."
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="118dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="180dp"
            android:text="Back"
            android:textColor="@color/white"
            android:onClick="goToPage14"
            android:textStyle="bold" />

        <Button
            android:layout_width="118dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="180dp"
            android:text="Next"
            android:textColor="@color/white"
            android:onClick="goToPage16"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>
